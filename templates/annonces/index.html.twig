                <td>{{ annonces_colocation.userId }}</td>
                <td>
                    <a href="{{ path('app_annonces_show', {'id': annonces_colocation.id}) }}" class="btn btn-sm text-primary" title="Voir">
                    <i class="bi bi-eye"></i>show</a>
                    <a href="{{ path('app_annonces_edit', {'id': annonces_colocation.id}) }}" class="btn btn-sm text-warning" title="Modifier">
                    <i class="bi bi-pencil"></i>edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<div class="d-flex justify-content-end mb-5">
    <a href="{{ path('app_annonces_new') }}" class="btn btn-success">
    <i class="bi bi-plus-circle"></i>Create new</a>


<style>
    .btn i {
        font-size: 1.2rem;
        
    }
    .btn-sm {
        padding: 0.2rem 0.5rem;
        
    }
    
    
</style>
{% endblock %}
