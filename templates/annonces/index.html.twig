{% extends 'front/index.html.twig' %}

{% block title %}AnnoncesColocation index{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">AnnoncesColocation index</h1>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>Id</th>
                <th>Logement</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Nombre_chambres</th>
                <th>Prix</th>
                <th>Date_pub</th>
                <th>UserId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonces_colocation in annonces_colocations %}
            <tr>
                <td>{{ annonces_colocation.id }}</td>
                <td>{{ annonces_colocation.logement }}</td>
                <td>{{ annonces_colocation.titre }}</td>
                <td>{{ annonces_colocation.description }}</td>
                <td>{{ annonces_colocation.nombreChambres }}</td>
                <td>{{ annonces_colocation.prix }}</td>
