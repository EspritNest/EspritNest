{% extends 'front/index.html.twig' %}

{% block title %}User Profile{% endblock %}
{% block stylesheets %}
    {{ parent() }}
   <style>
    .user-profile-container {
        display: flex; 
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        background-color: #f9f9f9;
    }
    .card {
        border: 1px solid #ddd;
        border-radius: 8px;
        width: 400px;
        background-color: #fff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
    .card-header {
        padding: 20px;
        text-align: center;
        background-color: #007bff;
        color: white;
    }
    .card-body {
        padding: 20px;
        text-align: center;
    }
    .profile-img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
        object-fit: cover;
        margin-bottom: 15px;
    }
    .card-footer {
        padding: 15px;
        text-align: center;
        background-color: #f1f1f1;
    }
    .btn {
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        font-size: 16px;
    }
    .btn:hover {
        background-color: #0056b3;
    }
</style>
{% endblock %}
{% block body %}
<div class="user-profile-container">
    <div class="card">
        <div class="card-header">
            <h2>{{ app.user.nom }}'s Profile</h2>
        </div>
        <div class="card-body">
            <img src="{{ app.user.img }}" alt="{{ app.user.nom }}" class="profile-img">
            <ul>
                <li><strong>Email:</strong> {{ app.user.email }}</li>
                <li><strong>Name:</strong> {{ app.user.nom }}</li>
                <li><strong>Phone:</strong> {{ app.user.Tel }}</li>
                <li><strong>Account Created:</strong> {{ app.user.createdAt|date('Y-m-d H:i:s') }}</li>
                <li><strong>Verified:</strong> {{ app.user.isVerified ? 'Yes' : 'No' }}</li>
            </ul>
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary">Edit Profile</a>
        </div>
    </div>
</div>



{% endblock %}
