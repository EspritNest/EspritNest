{% extends 'base.html.twig' %}

{% block title %}Admin - Nouveau Logement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Créer un Nouveau Logement</h1>
    
    <div class="card shadow-sm p-4">
        {{ include('logement/_form.html.twig') }}
    </div>

    <div class="mt-3 text-center mb-5">
        <a href="{{ path('app_logement_index_ad') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
    </div>
</div>

<style>
    .btn i {
        font-size: 1.2rem;
        margin-right: 5px;
    }
    .card {
        border-radius: 10px;
        background-color: #f9f9f9;
    }
</style>
{% endblock %}
