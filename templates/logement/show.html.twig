{% extends 'front/index.html.twig' %}

{% block title %}Logement{% endblock %}

{% block body %}
    <h1>Logement</h1>
<div class="container mt-5">
    <h1 class="text-center mb-4">Logement</h1>

    <table class="table table-bordered shadow-sm">
        <tbody>
            <tr>
                <th class="table-primary">Id</th>
                <td>{{ logement.id }}</td>
            </tr>
            <tr>
                <th class="table-primary">Adresse</th>
                <td>{{ logement.Adresse }}</td>
            </tr>
            <tr>
                <th class="table-primary">Code_postal</th>
                <td>{{ logement.CodePostal }}</td>
            </tr>
            <tr>
                <th class="table-primary">Superficie</th>
                <td>{{ logement.superficie }}</td>
            </tr>
            <tr>
                <th class="table-primary">Description</th>
                <td>{{ logement.Description }}</td>
            </tr>
            <tr>
                <th>Date_ajout</th>
                <td>{{ logement.dateAjout ? logement.dateAjout|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th class="table-primary">ProprietaireId</th>
                <td>{{ logement.ProprietaireId}}</td>
            </tr>
        </tbody>
    </table>
    <div class="d-flex justify-content-between mt-4">
    <a href="{{ path('app_logement_index') }}" class="btn btn-secondary">
    <i class="bi bi-arrow-left"></i>back to list</a>

    <a href="{{ path('app_logement_edit', {'id': logement.id}) }}" class="btn btn-warning">
    <i class="bi bi-pencil"></i>edit</a>
    </div>
    <div class="mt-3">
    {{ include('logement/_delete_form.html.twig') }}
    </div>
    </div>
    <style>
        .btn i {
            font-size: 1.2rem;
        }
    </style>
{% endblock %}
