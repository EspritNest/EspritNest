{% extends 'base.html.twig' %}

{% block title %}Admin - Détails du Logement{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Détails du Logement</h1>

    <div class="card shadow-sm">
        <div class="row g-0">
            <!-- Affichage de l'image du logement -->
            <div class="col-md-4">
                {% if logement.Description %}
                    <img src="{{ asset('uploads/logement/' ~ logement.Description) }}" alt="{{ logement.Adresse }}" class="img-fluid rounded-start" style="height: 100%; object-fit: cover;">
                {% else %}
                    <img src="{{ asset('uploads/logement/default.jpg') }}" alt="Image par défaut" class="img-fluid rounded-start" style="height: 100%; object-fit: cover;">
                {% endif %}
            </div>
            
            <!-- Informations détaillées -->
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Logement: {{ logement.Adresse }}</h5>
                    <table class="table table-bordered mt-3">
                        <tbody>
                            <tr>
                                <th class="table-primary">Adresse</th>
                                <td>{{ logement.Adresse }}</td>
                            </tr>
                            <tr>
                                <th class="table-primary">Code Postal</th>
                                <td>{{ logement.CodePostal }}</td>
                            </tr>
                            <tr>
                                <th class="table-primary">Superficie</th>
                                <td>{{ logement.superficie }} m²</td>
                            </tr>
                            <tr>
                                <th class="table-primary">Date d'ajout</th>
                                <td>{{ logement.dateAjout ? logement.dateAjout|date('Y-m-d') : 'Non spécifiée' }}</td>
                            </tr>
                            <tr>
                                <th class="table-primary">Propriétaire</th>
                                <td>{{ logement.ProprietaireId ? logement.ProprietaireId.nom : 'Non spécifié' }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="d-flex justify-content-between mt-4">
        <a href="{{ path('app_logement_index_ad') }}" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Retour à la liste
        </a>
        
        
            <a href="{{ path('app_logement_edit_ad', {'id': logement.id}) }}" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Modifier
            </a>
        
    </div>

    
        <div class="mt-3">
            {{ include('logement/_delete_form_admin.html.twig') }}
        </div>
    
</div>

<style>
    .card {
        border-radius: 10px;
        overflow: hidden;
    }
    .btn i {
        font-size: 1.2rem;
        margin-right: 5px;
    }
    .table {
        margin-top: 20px;
    }
</style>
{% endblock %}
