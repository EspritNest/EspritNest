{% extends 'base.html.twig' %}

{% block title %}Voitures index{% endblock %}

{% block body %}
    <h1>Voitures index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>UtilisateurId</th>
                <th>Marque</th>
                <th>Couleur</th>
                <th>PlaqueImmatriculation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for voiture in voitures %}
            <tr>
                <td>{{ voiture.id }}</td>
                <td>{{ voiture.utilisateurId }}</td>
                <td>{{ voiture.marque }}</td>
                <td>{{ voiture.couleur }}</td>
                <td>{{ voiture.plaqueImmatriculation }}</td>
                <td>
                    <a href="{{ path('app_voitures_show', {'id': voiture.id}) }}">show</a>
                    <a href="{{ path('app_voitures_edit', {'id': voiture.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_voitures_new') }}">Create new</a>
{% endblock %}
