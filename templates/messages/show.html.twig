{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}
    <h1>Messages</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Discussions_id</th>
                <td>{{ message.discussionsId }}</td>
            </tr>
            <tr>
                <th>Expéditeur_id</th>
                <td>{{ message.expéditeurId }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.contenu }}</td>
            </tr>
            <tr>
                <th>Date_envoi</th>
                <td>{{ message.dateEnvoi ? message.dateEnvoi|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_messages_index') }}">back to list</a>

    <a href="{{ path('app_messages_edit', {'id': message.id}) }}">edit</a>

    {{ include('messages/_delete_form.html.twig') }}
